@using DATN.Application.Dtos.ReadingDtos
@using DATN.Application.Dtos.RankQuestionDtos
@model ReadingQuestionCreateDto
@{
    ViewData["Title"] = "Thêm Câu Hỏi Đọc Hiểu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var now = DateTime.Now.ToString("yyyy-MM-ddTHH:mm:ss");
}

<div class="container mt-4">
    <h2 class="mb-4 text-center text-primary">Thêm Câu Hỏi Đọc Hiểu</h2>

    <form id="readingQuestionForm" method="post" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label for="Question" class="fw-bold">Nội dung câu hỏi</label>
            <textarea asp-for="Question" class="form-control" rows="4" placeholder="Nhập nội dung câu hỏi..."></textarea>
        </div>

        <div class="form-group mb-3">
            <label for="RankQuestionId" class="fw-bold">Mức độ câu hỏi</label>
            <select asp-for="RankQuestionId" class="form-control">
                @foreach (var rankQuestion in (IEnumerable<RankQuestionDto>)ViewData["RankQuestions"])
                {
                    <option value="@rankQuestion.Id">@rankQuestion.RankQuestionName</option>
                }
            </select>
        </div>

        <div class="form-group mb-4">
            <label for="image" class="fw-bold">Ảnh minh họa (tuỳ chọn)</label>
            <input type="file" name="image" class="form-control-file" />
        </div>

        <div id="answers-container" class="mb-4">
            <h4 class="fw-bold text-success">Đáp án</h4>

            @for (int i = 0; i < 4; i++)
            {
                <div class="form-group mb-3 border rounded p-3">
                    <label class="form-label">Đáp án @(i + 1)</label>
                    <input type="hidden" name="ReadingAnswers[@i].Id" value="0" />
                    <input type="text" name="ReadingAnswers[@i].Content" class="form-control mb-2" placeholder="Nhập đáp án @(i + 1)" />

                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="CorrectAnswerIndex" value="@i" id="answer_@i" />
                        <label class="form-check-label" for="answer_@i">Là đáp án đúng</label>
                    </div>
                </div>
            }
        </div>

        <input type="hidden" name="CreatedDate" value="@now" />
        <input type="hidden" name="UpdatedDate" value="@now" />

        <div class="d-flex justify-content-between">
            <a href="@Url.Action("ManageReadingQuestion", "Admin")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Lưu câu hỏi
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.getElementById('readingQuestionForm').addEventListener('submit', function (e) {
            e.preventDefault(); // Ngăn form submit mặc định

            const form = e.target;
            const formData = new FormData(form);

            fetch('@Url.Action("AddReadingQuestion", "ReadingQuestion")', {
                method: 'POST',
                body: formData
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Thành công',
                            text: data.message,
                            timer: 5000,
                            showConfirmButton: true
                        }).then(() => {
                            window.location.href = data.redirectUrl;
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Thất bại',
                            text: data.message,
                            confirmButtonText: 'OK'
                        });
                    }
                })
                .catch(error => {
                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi',
                        text: 'Có lỗi xảy ra khi gửi biểu mẫu.',
                    });
                    console.error('Error:', error);
                });
        });
    </script>

    <!-- Thêm SweetAlert2 nếu bạn chưa có -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Bootstrap Icons (nếu bạn cần dùng icon mũi tên và lưu) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
}
