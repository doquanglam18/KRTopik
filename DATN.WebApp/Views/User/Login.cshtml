@model DATN.Application.Dtos.UserDtos.LoginDto
@{
    Layout = null;
    ViewData["Title"] = "Đăng nhập";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap 4 & Font Awesome -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">

    <style>
        body {
          
            background-size: cover !important;
            background-attachment: fixed !important;
            min-height: 100vh;
            display: flex;
            align-items: center;
            font-family: 'Roboto', sans-serif;
        }


        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
/*             background: linear-gradient(135deg, rgba(102, 126, 234, 0.8) 0%, rgba(118, 75, 162, 0.8) 100%); */
            z-index: -1;
        }

        .login-form {
            background: rgba(255, 255, 255, 0.95);
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
            animation: fadeInUp 0.6s ease-out;
        }

        .login-form:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        }

        .login-form h3 {
            color: #2d3748;
            font-weight: 700;
            margin-bottom: 30px;
            text-align: center;
            font-size: 28px;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .input-with-icon {
            position: relative;
        }

        .form-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #4a5568;
            font-size: 18px;
            transition: all 0.3s ease;
        }

        .form-control {
            height: 50px;
            padding-left: 45px;
            font-size: 16px;
            border: 2px solid #e2e8f0;
            border-radius: 10px;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }

        .form-control:focus + .form-icon {
            color: #667eea;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            height: 50px;
            font-size: 16px;
            font-weight: 600;
            border-radius: 10px;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 7px 14px rgba(0, 0, 0, 0.2);
            background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
        }

        .alert {
            border-radius: 10px;
            padding: 15px 20px;
            margin-bottom: 25px;
            border: none;
        }

        .alert-danger {
            background-color: #fff5f5;
            color: #c53030;
            border-left: 4px solid #fc8181;
        }

        .register-link {
            color: #667eea;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .register-link:hover {
            color: #764ba2;
            text-decoration: none;
        }

        .forgot-password {
            color: #718096;
            font-size: 14px;
            text-align: right;
            display: block;
            margin-top: -15px;
            margin-bottom: 20px;
            transition: all 0.3s ease;
        }

        .forgot-password:hover {
            color: #667eea;
            text-decoration: none;
        }

        @@media (max-width: 768px) {
            body {
                padding: 20px 0;
            }

            .login-form {
                padding: 25px;
                margin: 15px;
            }

            .login-form h3 {
                font-size: 24px;
                margin-bottom: 20px;
            }

            .form-control {
                height: 45px;
                font-size: 15px;
            }
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body style="background-image: url('/themelef/images/logokr.png') !important;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="login-form">
                    <h3>Đăng nhập</h3>

                    @if (ViewData["Error"] != null)
                    {
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-circle mr-2"></i>
                            @ViewData["Error"]
                            </div>
                    }

                    <form asp-controller="User" asp-action="LoginApp" method="post">
                        @Html.AntiForgeryToken()

                        <div class="form-group input-with-icon">
                            <i class="fas fa-envelope form-icon"></i>
                            <input asp-for="Email" class="form-control" placeholder="Email" required>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group input-with-icon">
                            <i class="fas fa-lock form-icon"></i>
                            <input asp-for="PasswordHash" type="password" class="form-control" placeholder="Mật khẩu" required>
                            <span asp-validation-for="PasswordHash" class="text-danger"></span>
                        </div>

                        <a href="#" class="forgot-password">
                            <i class="fas fa-key mr-1"></i>Quên mật khẩu?
                        </a>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">
                                <i class="fas fa-sign-in-alt mr-2"></i>Đăng nhập
                            </button>
                        </div>

                        <p class="text-center mb-0">
                            Chưa có tài khoản? 
                            <a asp-controller="User" asp-action="Register" class="register-link">
                                <i class="fas fa-user-plus mr-1"></i>Đăng ký ngay
                            </a>
                        </p>
                        <!-- Thêm nút quay về trang chủ ở đây -->
                        <div class="text-center mt-3">
                            <a asp-controller="Home" asp-action="Index" class="home-link">
                                <i class="fas fa-home mr-1"></i>Quay về trang chủ
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    $(document).ready(function () {
        $('form').on('submit', function (e) {
            e.preventDefault();

            var $form = $(this);
            var formData = $form.serialize();

            $.ajax({
                url: $form.attr('action'),
                type: 'POST',
                data: formData,
                success: function (response) {
                    if (response.success) {
                        var redirectUrl = response.redirectUrl;
                        Swal.fire({
                            icon: 'success',
                            title: 'Thành công!',
                            text: response.message,
                            confirmButtonText: 'OK'
                        }).then((swalResult) => {
                            if (swalResult.isConfirmed && redirectUrl) {
                                window.location.href = redirectUrl;
                            }
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Lỗi!',
                            text: response.message
                        });
                    }
                },
                error: function () {
                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi!',
                        text: 'Có lỗi xảy ra trong quá trình xử lý'
                    });
                }
            });
        });
    });
</script>

</body>
</html>