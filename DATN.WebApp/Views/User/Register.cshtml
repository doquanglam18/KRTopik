        if (password !== confirmPassword) {
            Swal.fire({
                icon: 'error',
                title: 'Lỗi!',
                text: 'Mật khẩu xác nhận không khớp'
            });
            return false;
        }

    });
});

</script>

<script>
    $(document).ready(function() {
        $('form').on('submit', function(e) {
            e.preventDefault();

            // Kiểm tra mật khẩu trước khi submit
            var password = $('#PasswordHash').val();
            var confirmPassword = $('#ConfirmPassword').val();

            if (password !== confirmPassword) {
                Swal.fire({
                    icon: 'error',
                    title: 'Lỗi!',
                    text: 'Mật khẩu xác nhận không khớp'
                });
                return false;
            }

            // Hiển thị loading khi bắt đầu xử lý
            Swal.fire({
                title: 'Đang xử lý...',
                text: 'Vui lòng chờ trong giây lát',
                allowOutsideClick: false,
                allowEscapeKey: false,
                allowEnterKey: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            var formData = $(this).serialize();

            $.ajax({
                url: $(this).attr('action'),
                type: 'POST',
                data: formData,
                success: function(result) {
                // Đóng loading
                Swal.close();

                if (result.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Thành công!',
                        text: result.message,
                        confirmButtonText: 'OK'
                    }).then((swalResult) => {
                        if (swalResult.isConfirmed) {
                            if (result.redirectUrl) {
                                window.location.href = result.redirectUrl;
                            } else {
                                window.location.href = '/User/Login';
                            }
                        }
                    });
                } else {
                    // Thêm xử lý khi có lỗi (ví dụ: email trùng)
                    Swal.fire({
                        icon: 'error',
                        title: 'Đăng ký thất bại!',
                        text: result.message,
                        confirmButtonText: 'OK'
                    });
                }
            },
                error: function() {
                    // Đóng loading khi có lỗi
                    Swal.close();

                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi!',
                        text: 'Có lỗi xảy ra trong quá trình xử lý'
                    });
                }
            });
        });
    });
</script>

</body>
</html>