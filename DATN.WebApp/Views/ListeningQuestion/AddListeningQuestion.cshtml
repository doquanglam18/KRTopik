@using DATN.Application.Dtos.RankQuestionDtos
@using DATN.Application.Dtos.ListeningDtos
@model ListeningQuestionCreateDto
@{
    ViewData["Title"] = "Thêm Câu Hỏi Nghe Hiểu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var now = DateTime.Now.ToString("yyyy-MM-ddTHH:mm:ss");
}

<div class="container mt-4">
    <h2 class="mb-4 text-center text-primary">Thêm Câu Hỏi Nghe Hiểu</h2>

    <form id="listeningQuestionForm" method="post" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label for="Question" class="fw-bold">Nội dung câu hỏi</label>
            <textarea asp-for="Question" class="form-control" rows="4" placeholder="Nhập nội dung câu hỏi..." required></textarea>
        </div>

        <div class="form-group mb-3">
            <label for="ListeningScript" class="fw-bold">Transcript (nếu có)</label>
            <textarea asp-for="ListeningScript" class="form-control" rows="3" placeholder="Nhập transcript..." required></textarea>
        </div>

        <div class="form-group mb-3">
            <label for="RankQuestionId" class="fw-bold">Mức độ câu hỏi</label>
            <select asp-for="RankQuestionId" class="form-control" required>
                @foreach (var rankQuestion in (IEnumerable<RankQuestionDto>)ViewData["RankQuestions"])
                {
                    <option value="@rankQuestion.Id">@rankQuestion.RankQuestionName</option>
                }
            </select>
        </div>

        <div class="form-group mb-4">
            <label for="Sound" class="fw-bold">Tệp âm thanh (bắt buộc)</label>
            <input type="file" name="Sound" class="form-control-file" required />
        </div>


        <div id="answers-container" class="mb-4">
            <h4 class="fw-bold text-success">Đáp án</h4>

            @for (int i = 0; i < 4; i++)
            {
                <div class="form-group mb-3 border rounded p-3">
                    <label class="form-label">Đáp án @(i + 1)</label>
                    <input type="hidden" name="ListeningAnswers[@i].Id" value="0" />

                    <!-- Nhập nội dung dạng text -->
                    <input type="text" name="ListeningAnswers[@i].Content" class="form-control mb-2" placeholder="Nhập nội dung đáp án @(i + 1)" />

                    <!-- Hoặc tải lên hình ảnh -->
                    <label class="form-label">Hoặc chọn ảnh:</label>
                    <input type="file" name="ListeningAnswers[@i].Image" class="form-control mb-2" accept="image/*" />

                    <!-- Đáp án đúng -->
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="CorrectAnswerIndex" value="@i" id="answer_@i" />
                        <label class="form-check-label" for="answer_@i">Là đáp án đúng</label>
                    </div>
                </div>
            }

        </div>

        <input type="hidden" name="CreatedDate" value="@now" />
        <input type="hidden" name="UpdatedDate" value="@now" />

        <div class="d-flex justify-content-between">
            <a href="@Url.Action("ManageListeningQuestion", "Admin")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Lưu câu hỏi
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.getElementById('listeningQuestionForm').addEventListener('submit', function (e) {
            e.preventDefault(); // Ngăn form submit mặc định

            const form = e.target;
            const formData = new FormData(form);

            // Kiểm tra các đáp án
            let isValid = true;
            let missingAnswers = [];
            for (let i = 0; i < 4; i++) {
                const content = formData.get(`ListeningAnswers[${i}].Content`)?.trim();
                const image = formData.get(`ListeningAnswers[${i}].Image`);

                if ((content === "" || content == null) && (!image || image.size === 0)) {
                    isValid = false;
                    missingAnswers.push(`Đáp án ${i + 1}`);
                }
            }


            // Kiểm tra có đáp án đúng được chọn không
            const correctAnswerIndex = formData.get("CorrectAnswerIndex");
            if (correctAnswerIndex === null) {
                isValid = false;
                Swal.fire({
                    icon: 'error',
                    title: 'Lỗi',
                    text: 'Bạn phải chọn một đáp án đúng!',
                    confirmButtonText: 'OK'
                });
            }

            if (!isValid) {
                Swal.fire({
                    icon: 'error',
                    title: 'Lỗi',
                    text: `Vui lòng điền đầy đủ ${missingAnswers.join(", ")} và chọn 1 đáp án đúng.`,
                    confirmButtonText: 'OK'
                });
                return; // Ngừng gửi form nếu có lỗi
            }

            // Hiển thị thông báo chờ
            Swal.fire({
                title: 'Vui lòng chờ...',
                text: 'Đang gửi dữ liệu...',
                icon: 'info',
                showConfirmButton: false,
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading(); // Hiển thị vòng xoay tải
                }
            });

            fetch('@Url.Action("AddListeningQuestion", "ListeningQuestion")', {
                method: 'POST',
                body: formData
            })
                .then(response => response.json())
                .then(data => {
                    // Ẩn thông báo chờ
                    Swal.close();

                    if (data.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Thành công',
                            text: data.message,
                            timer: 5000,
                            showConfirmButton: true
                        }).then(() => {
                            window.location.href = data.redirectUrl;
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Thất bại',
                            text: data.message,
                            confirmButtonText: 'OK'
                        });
                    }
                })
                .catch(error => {
                    // Ẩn thông báo chờ
                    Swal.close();

                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi',
                        text: 'Có lỗi xảy ra khi gửi biểu mẫu.',
                    });
                    console.error('Error:', error);
                });
        });

    </script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
}
