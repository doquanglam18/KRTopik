<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Trang quản trị hệ thống</title>

    <!-- Font & Bootstrap -->
    <link href="~/admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,600,700,800,900" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- Template CSS -->
    <link href="~/admin/css/sb-admin-2.min.css" rel="stylesheet" />

    <style>
        .custom-back-btn {
            background-color: #007bff;
            color: white;
            font-size: 0.8rem;
            font-weight: bold;
            padding: 12px 20px;
            border-radius: 8px;
            display: inline-flex;
            align-items: center;
            text-decoration: none;
            transition: opacity 0.3s ease-in-out;
        }
        .custom-back-btn:hover {
            opacity: 0.8;
        }
        .custom-back-btn i {
            font-size: 1.3rem;
        }
    </style>
</head>

<body id="page-top">
    <div id="wrapper" class="d-flex">
        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" asp-controller="SystemAdmin" asp-action="Index">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-laugh-wink"></i>
                </div>
                <div class="sidebar-brand-text mx-3">Quản lý hệ thống tài khoản</div>
            </a>

            <hr class="sidebar-divider my-0" />

            <!-- Quản lý tài khoản (default active) -->
            <li class="nav-item active">
                <a class="nav-link" asp-controller="SystemAdmin" asp-action="Index">
                    <i class="fas fa-fw fa-user"></i>
                    <span>Quản lý tài khoản</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="SystemAdmin" asp-action="ManageSystemLogging">
                    <i class="fas fa-fw fa-file-alt"></i>
                    <span>Hoạt động người dùng trên hệ thống</span>
                </a>
            </li>

            <!-- Thống kê hệ thống -->
            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="Index">
                    <i class="fas fa-fw fa-file-alt"></i>
                    <span>Thống kê hệ thống</span>
                </a>
            </li>

            <form id="logoutForm" class="text-center mt-3">
                @Html.AntiForgeryToken()

                <button type="submit" class="btn btn-primary custom-back-btn">
                    <i class="fas fa-arrow-left me-2"></i> Đăng xuất
                </button>
            </form>



            <hr class="sidebar-divider d-none d-md-block" />

            <!-- Toggler -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>
        </ul>
        <!-- End Sidebar -->

        <!-- Main content -->
        <div id="content-wrapper" class="d-flex flex-column flex-grow-1">
            <div id="content" class="p-4">
                @RenderBody()
            </div>

            <!-- Footer -->
            <footer class="sticky-footer bg-white mt-auto">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; ADMIN</span>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scroll Top -->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Scripts -->
    <script src="~/admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/admin/js/sb-admin-2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.getElementById("logoutForm").addEventListener("submit", function (e) {
            e.preventDefault();

            fetch('/User/LogOut', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify({})
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success && data.redirectUrl) {
                        window.location.href = data.redirectUrl;
                    } else {
                        alert(data.message || 'Đăng xuất thất bại');
                    }
                })
                .catch(error => {
                    console.error('Logout error:', error);
                    alert('Có lỗi xảy ra khi đăng xuất.');
                });
        });
    </script>


    @RenderSection("Scripts", required: false)

</body>
</html>
