<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Trang quản trị</title>

    <!-- Custom fonts for this template-->
    <link href="~/admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/admin/css/sb-admin-2.min.css" rel="stylesheet">

<!-- Thêm CSS vào -->
    <style>
        .custom-back-btn {
            background-color: #007bff; 
            color: white;
            font-size: 0.8rem;
            font-weight: bold;
            padding: 12px 20px;
            border-radius: 8px;
            display: inline-flex;
            align-items: center;
            text-decoration: none;
            transition: opacity 0.3s ease-in-out;
        }

        .custom-back-btn:hover {
            opacity: 0.8;
        }

        .custom-back-btn i {
            font-size: 1.3rem;
        }
    </style>

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper" class="d-flex">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="index.html">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-laugh-wink"></i>
                </div>
                <div class="sidebar-brand-text mx-3">Quản trị hệ thống kiến thức tiếng Hàn <sup>2</sup></div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <li class="nav-item active">
                <a class="nav-link" asp-action="ManageReadingQuestion" asp-controller="Admin">
                    <i class="fas fa-fw fa-file-alt"></i>
                    <span>Quản lý câu hỏi đọc</span>
                </a>
            </li>

            <li class="nav-item active">
                <a class="nav-link" asp-action="ManageListeningQuestion" asp-controller="Admin">
                    <i class="fas fa-fw fa-file-alt"></i>
                    <span>Quản lý câu hỏi nghe</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-action="ManageTestSet" asp-controller="Admin">
                    <i class="fas fa-fw fa-file-alt"></i>
                    <span>Quản lý đề thi</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-action="ManageComment" asp-controller="Admin">
                    <i class="fas fa-fw fa-file-alt"></i>
                    <span>Quản lý bình luận</span>
                </a>
            </li>


            <li class="nav-item">
                <a class="nav-link" asp-action="ManageKoreaBlog" asp-controller="Admin">
                    <i class="fas fa-fw fa-tags"></i>
                    <span>Quản lý bài viết tiếng Hàn</span>
                </a>
            </li>


            <a class="btn btn-primary custom-back-btn" asp-action="Index" asp-controller="Home">
                <i class="fas fa-arrow-left me-2"></i> Quay lại Website Ôn tập
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

        </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column flex-grow-1">

            <!-- Main Content -->
            <div id="content" class="p-4">
                @RenderBody()
            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; ADMIN</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Bootstrap core JavaScript-->
    <script src="~/admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/admin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/admin/js/sb-admin-2.min.js"></script>

    <!-- Bootstrap 5 -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>

</html>