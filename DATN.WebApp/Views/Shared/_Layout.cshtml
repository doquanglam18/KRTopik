@using Microsoft.AspNetCore.Http
@using System.IdentityModel.Tokens.Jwt
@using NuGet.Common
@using System.Security.Claims
@inject IHttpContextAccessor HttpContextAccessor

@{
    var token = HttpContextAccessor.HttpContext.Session.GetString("JWTToken");
    var isLoggedIn = !string.IsNullOrEmpty(token);
    string username = "Guest";
    string avatar = "";

    if (isLoggedIn)
    {
        var handler = new JwtSecurityTokenHandler();
        var jsonToken = handler.ReadToken(token) as JwtSecurityToken;
        username = jsonToken?.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Name)?.Value ?? "Guest";
        avatar = jsonToken?.Claims.FirstOrDefault(c => c.Type == "avatar")?.Value ?? "/images/avatar.jpg";
    }
}

